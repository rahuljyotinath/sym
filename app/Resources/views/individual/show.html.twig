{% extends 'base.html.twig' %}

{% block body %}
    <h1>Individual</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ individual.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ individual.nameFirst }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ individual.titel }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ individual.address }}</td>
            </tr>
            <tr>
                <th>Plz</th>
                <td>{{ individual.plz }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ individual.city }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ individual.tel }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ individual.nameLast }}</td>
            </tr>
            
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_individual_list') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('app_individual_edit', { 'id': individual.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
