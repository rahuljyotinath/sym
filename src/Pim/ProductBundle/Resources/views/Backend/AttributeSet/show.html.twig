{% extends "app/base.html.twig" %}


{% block page_content %}
    {% block top_content_header %}

    {% endblock %}
    <div class="setcontainer">
        <h2 style="margin-bottom:0;">AttributeSetManager</h2>
        <h4 style="margin-top:0;">(show attribute sets)</h4>
        <table class="table table-striped table-bordered table-condensed">
            <tbody>
                <tr>
                    <td><strong>uuid</strong></td>
                    <td>{{ entity.uuid }}</td>
                </tr>
                <tr>
                    <td><strong>name</strong></td>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <td><strong>attributes</strong></td>
                    <td>
                        {% for attr in entity.attributes %}
                            {{ attr }}<br />
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td><strong>created</strong></td>
                    <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <td><strong>updated</strong></td>
                    <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-success" href="{{ path('pim_attribute_set_backend_list') }}">
                    Back to list
                </a>
                <a class="btn btn-mini btn-info "
                   href="{{ path('pim_attribute_set_backend_edit', {'uuid': entity.uuid}) }}">
                    {% trans %}edit{% endtrans %}
                </a>
                <a class="btn btn-mini btn-danger"
                   onclick="return confirm('Are you sure you want to delete this item?');"
                   href="{{ path('pim_attribute_set_backend_delete', {'uuid': entity.uuid}) }}">
                    {% trans %}delete{% endtrans %}
                </a>
            </div>
        </div>
    </div>
    <style>
        th.sorted > a.desc:before {
            content: "\2191";
            padding-right: 3px;
            margin-top: -5px;
            font-size: 18px;
            color: #000;
            text-decoration: none;
            font-weight: bold;
        }

        th.sorted > a.asc:before {
            content: "\2193";
            padding-right: 3px;
            margin-top: -5px;
            font-size: 18px;
            color: #000;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
{% endblock %}